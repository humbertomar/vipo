{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "Node",
      "target": "ES2020",
      "lib": ["ES2020"],
      "rootDir": "./src",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "dist",
      "node_modules",
      "_core"
    ]
  }
  