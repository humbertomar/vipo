{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "../client/src/*"
            ],
            "@shared/*": [
                "../shared/*"
            ],
            "@server/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "**/*",
        "../shared/**/*"
    ]
}